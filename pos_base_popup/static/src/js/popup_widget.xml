<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_base_popup.BasePopupWidget">
        <div class="base-popup-widget p-3">
            <div class="popup-header mb-3">
                <h4 class="popup-title" t-esc="state.title"/>
            </div>
            <div class="popup-content">
                <div class="mb-3">
                    <label class="form-label popup-name" t-esc="state.name"/>
                    <input type="text" 
                           class="form-control popup-input" 
                           t-model="state.inputValue"
                           t-att-placeholder="_t('Enter text here')"/>
                </div>
                <button class="btn btn-primary" 
                        t-on-click="onButtonClick">
                    <t t-esc="_t('Show Message')"/>
                </button>
            </div>
        </div>
    </t>
</templates>
